<h1>Sélectionnez vos produits</h1>
<div class="row">
  <div class="col">
    <label>Produits disponibles :</label>
    {{multi-select elements = model.dispoItems
                   selectedIds = model.selectedDispoItemsIds
    dblClick="dblClick"}}
    {{model.includedItems.length}} produit(s) inclu(s)
  </div>
  <div class="col-1">
    <br><br>
    <button disabled="{{unless model.selectedDispoItems.length 'disabled' ''}}"
      {{action "addTo" model.dispoItems
                     model.includedItems
                     model.selectedDispoItems}}
      class="btn btn-primary btn-block">
    {{fa-icon "step-forward"}}
    </button>
    <button disabled="{{unless model.dispoItems.length 'disabled' ''}}"
      {{action "addTo" model.dispoItems
                     model.includedItems
                     model.dispoItems}}
      class="btn btn-primary btn-block">
      {{fa-icon "fast-forward"}}
    </button>
    <button disabled="{{unless model.selectedIncludedItems.length 'disabled' ''}}"
      {{action "addTo" model.includedItems
                     model.dispoItems
                     model.selectedIncludedItems}}
      class="btn btn-primary btn-block">
      {{fa-icon "step-backward"}}
    </button>
    <button disabled="{{unless model.includedItems.length 'disabled' ''}}"
      {{action "addTo" model.includedItems
                     model.dispoItems
                     model.includedItems}}
      class="btn btn-primary btn-block">
      {{fa-icon "fast-backward"}}
    </button>
  </div>
  <div class="col">
    <label>Produits à inclure :</label>
    {{multi-select elements = model.includedItems
                   selectedIds = model.selectedIncludedItemsIds}}
  </div>
</div>

{{#link-to 'step2' class="button"}}
  <button disabled="{{unless model.includedItems.length 'disabled' ''}}">
    Etape suivante
    {{fa-icon "arrow-circle-right"}}
  </button>
{{/link-to}}
